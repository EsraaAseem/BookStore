@model BullkyB.Model.ViewModel.CompanyMV
@{
    ViewData["Title"] = "Upsert";
}
<h1>@(Model.company.Id==0?"Create":"Update")</h1>
<form method="post" >
    <input asp-for="company.Id" hidden />
   <div class="col-12 row">
       <div class="col-12 col-sm-5 row mb-4 text-center">
            <div class="col-4 text-black">Name</div>
            <input asp-for="company.Name" class="col-8 ">
            <span asp-validation-for="company.Name" class="text-danger"></span>
       </div>
        <div class="col-12 col-sm-5 row mb-4 text-center">
            <div class="col-4 text-black">City</div>
            <input asp-for="company.City" class="col-8 ">
            <span asp-validation-for="company.City" class="text-danger"></span>
        </div>
        <div class="col-12 col-sm-5 row mb-4 text-center">
            <div class="col-4 text-black">Street Adress</div>
            <input asp-for="company.StreetAdress" class="col-8 ">
            <span asp-validation-for="company.StreetAdress" class="text-danger"></span>
        </div>
        <div class="col-12 col-sm-5 row mb-4 text-center">
            <div class="col-4 text-black">Phone</div>
            <input asp-for="company.PhoneNumber" class="col-8 ">
            <span asp-validation-for="company.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12 col-sm-5 row mb-4 text-center">
            <div class="col-4 text-black">State</div>
            <input asp-for="company.State" class="col-8 ">
            <span asp-validation-for="company.State" class="text-danger"></span>
        </div>
       
        <div class="col-12 col-sm-5 row mb-4 text-center">
            <div class="col-4 text-black">Postal Code</div>
            <input asp-for="company.PostalCode" class="col-8 ">
            <span asp-validation-for="company.PostalCode" class="text-danger"></span>
        </div>
        <div class="col-12  row mb-4 text-center">
           @if(Model.company.Id==0){
                 <button type="submit" class="btn btn-primary col-5 col-lg-3 me-3 ms-4">Create</button>
           }
           else{
                <button type="submit" class="btn btn-primary col-5  me-2 col-lg-3 ">Update</button>
           }
            <a class="nav-link col-5 col-lg-3 text-light text-center btn btn-secondary pt-1" asp-action="Index">Back</a>
       </div>
   </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
