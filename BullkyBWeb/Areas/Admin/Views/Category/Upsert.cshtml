@model BullkyB.Model.ViewModel.CategoryMV
@{
    ViewData["Title"] = "Upsert";
}
<h1>@(Model.category.Id==0?"Create":"Update")</h1>
<form method="post" >
    <input asp-for="category.Id" hidden />
   <div class="col-12 row">
       <div class="col-12 row mb-4 text-center">
            <div class="col-3 text-black">Name</div>
            <input asp-for="category.Name" class="col-8 ">
            <span asp-validation-for="category.Name" class="text-danger"></span>
       </div>
        <div class="col-12 row text-center">
            <div class="col-3 text-black">disOrder</div>
            <input asp-for="category.Disorder" type="number" class="col-8"/>
            <span asp-validation-for="category.Disorder" class="text-danger"></span>
        </div>
        <div class="col-12 row mt-4 ms-2 d-flex justify-content-center">
           @if(Model.category.Id==0){
                 <button type="submit" class="btn btn-primary col-5 col-lg-3 me-3 ">Create</button>
           }
           else{
                <button type="submit" class="btn btn-primary col-5 me-2 col-lg-3 ">Update</button>
           }
            <a class="nav-link col-5 col-lg-3 text-light text-center btn btn-secondary" asp-action="Index">Back</a>
       </div>
   </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
