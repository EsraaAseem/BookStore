@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row ">
    @foreach(var product in Model)
    {
        <div class=" col-12 col-sm-6 col-md-4 col-lg-3 " >
            <div class="card ms-2 mb-3 mt-3" style="background-color:aliceblue;">
                <div class="card-header">
                    <img src="@product.ImageUrl" width="100%" height="320px" />
                </div>
                <div class="card-body">
                    <h3 class="text-info">@product.Title</h3>
                    <h4 class="text-danger">@product.Author</h4>
                    <p class="text-primary">List Price:<strike><b class="text-info">@product.ListPrice</b></strike>$ <p>
                    <p class="text-info"><span class="text-primary">Price</span> :@product.Price $</p>
                </div>
                <div class="card-footer col-12 bg-primary">
                    <a class="btn btn-primary col-12" asp-action="Details" asp-route-productId="@product.Id">Details</a>
                </div>
           </div>
        </div>
    }
</div>